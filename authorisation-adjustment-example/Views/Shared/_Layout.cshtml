<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet"
          href="https://checkoutshopper-test.adyen.com/checkoutshopper/sdk/5.40.0/adyen.css"
          integrity="sha384-BRZCzbS8n6hZVj8BESE6thGk0zSkUZfUWxL/vhocKu12k3NZ7xpNsIK39O2aWuni"
          crossorigin="anonymous" />

    <script src="https://checkoutshopper-test.adyen.com/checkoutshopper/sdk/5.40.0/adyen.js"
            integrity="sha384-ds1t0hgFCe636DXFRL6ciadL2Wb4Yihh27R4JO7d9CF7sFY3NJE4aPCK0EpzaYXD"
            crossorigin="anonymous"></script>

    <title>@ViewData["Title"]</title>
</head>
<body>
    <header id="header">
      <a href="/">
        <img src="~/images/myhotel-logo.svg" alt="logo" />
      </a>
      <!-- start Navigation Menu -->
      <nav class="navMenu">
          <a asp-area="" asp-controller="Home" asp-action="Index">Booking View</a>
          <a asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
      </nav>
      <!-- end Navigation Menu -->

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
@RenderSection("Scripts", required: false)
</body>
</html>
