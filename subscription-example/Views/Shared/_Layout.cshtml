<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
         href="https://checkoutshopper-test.adyen.com/checkoutshopper/sdk/5.22.0/adyen.css"
         integrity="sha384-cNCZQ9w12APpo0kMDQZUWPrgj+aXCqDDIhOhuLs+Lh33G2L7tkXUcY3U3YZTEeoT"
         crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
    
    <script src="https://checkoutshopper-test.adyen.com/checkoutshopper/sdk/5.22.0/adyen.js"
         integrity="sha384-ZNAVBtrzzpDec9gwSGLDKQs9EMHSZpzIX6exNSGsq/2oo0l3umfTfaRhAzjH3PLd"
         crossorigin="anonymous"></script>

    <title>@ViewData["Title"] - Checkout Demo</title>
</head>
<body>
    <header id="header">
      <a href="/">
        <img src="~/images/mymusic-logo.svg" alt="logo" />
      </a>
      <!-- start Navigation Menu -->
      <nav class="navMenu">
          <a asp-area="" asp-controller="Home" asp-action="Index">Shopper View</a>
          <a asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
      </nav>
      <!-- end Navigation Menu -->

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
@RenderSection("Scripts", required: false)
</body>
</html>
