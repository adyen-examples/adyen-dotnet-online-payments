@{
    ViewData["Title"] = "Adyen Subscription Preview";
}
<main class="preview-page">
  <section class="cart">
    <h2>Subscription details</h2>
    <div class="order-summary">
      <ul class="order-summary-list">
        <li class="order-summary-list-list-item">
          <img src="~/images/sunglasses.png" class="order-summary-list-list-item-image" alt="">
          <p class="order-summary-list-list-item-title">Sunglasses Subscription (monthly)</p>
          <p class="order-summary-list-list-item-price">100.00</p>
        </li>
      </ul>
    </div>
    <div class="cart-footer">
    <span class="cart-footer-label">Total:</span>
    <span class="cart-footer-amount">100.00</span>
    <a asp-area="" asp-controller="Home" asp-action="Subscription" asp-route-id="@ViewBag.PaymentMethod">
      <p class="button">Continue to confirm subscription</p>
    </a>
    </div>
  </section>
</main>