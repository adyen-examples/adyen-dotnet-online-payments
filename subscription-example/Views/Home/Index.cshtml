@{
    ViewData["Title"] = "Adyen Subscription Home";
}

@await Html.PartialAsync("_NavigationMenu")

<div class='main-container'>
  <div class="info">
    <h1>Select a demo</h1>
    <p>Click to explore the subscriptions demo. This demo shows how tokenization works and you can make a payment using the token.</p>
    <p>
      Make sure the payment method you want to use are enabled for your account.
      Refer <a href="https://docs.adyen.com/payment-methods#add-payment-methods-to-your-account">the documentation</a> to add missing
      payment methods.
    </p>
    <p>To learn more, check out the documentation about <a href="https://docs.adyen.com/online-payments/tokenization"> tokenization.</a></p>
  </div>

  <ul class="integration-list">
    <li class="integration-list-item">
      <a asp-area="" asp-controller="Home" asp-action="Preview" asp-route-id="dropin" class="integration-list-item-link">
        <div class="title-container">
          <p class="integration-list-item-title">Drop-in</p>
        </div>
      </a>
    </li>
    <li class="integration-list-item">
      <a asp-area="" asp-controller="Home" asp-action="Preview" asp-route-id="card" class="integration-list-item-link">
        <div class="title-container">
          <p class="integration-list-item-title">Card</p>
        </div>
      </a>
    </li>
  </ul>
</div>
