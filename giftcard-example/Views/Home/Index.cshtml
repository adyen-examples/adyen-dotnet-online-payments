@{
    ViewData["Title"] = "Adyen Giftcard Home";
}
<div class='main-container'>
  <div class="info">
    <h1>Select a demo</h1>
    <p>Click to view an interactive example of a PCI-compliant UI integration for giftcard payments.</p>
    <p>
      Make sure that the payment method/giftcard you want to use are enabled for your account.
      Refer <a href="https://docs.adyen.com/payment-methods#add-payment-methods-to-your-account">the documentation</a> to add missing
      payment methods and <a href="https://docs.adyen.com/payment-methods/gift-cards">giftcards</a>.
    </p>
    <p>To learn more about client-side integration solutions, check out <a href="https://docs.adyen.com/payment-methods/gift-cards/web-drop-in">Giftcard payments</a>.</p>
  </div>

  <ul class="integration-list">
    <li class="integration-list-item">
      <a asp-area="" asp-controller="Home" asp-action="PreviewDropin" asp-route-id="dropin" class="integration-list-item-link">
        <div class="title-container">
          <p class="integration-list-item-title">Drop-in</p>
        </div>
      </a>
    </li>
    <li class="integration-list-item">
      <a asp-area="" asp-controller="Home" asp-action="PreviewGiftcardComponent" asp-route-id="giftcard" class="integration-list-item-link">
        <div class="title-container">
          <p class="integration-list-item-title">Giftcard</p>
        </div>
      </a>
    </li>
  </ul>
</div>
