{
    "name": "Adyen Pay by Link Example (.NET 6)",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "../.."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp"
            ]
        }
    },
    "forwardPorts": [
        8080,
        5001
    ],
    "postCreateCommand": "dotnet --version && dotnet restore paybylink-example/adyen-dotnet-paybylink-example.csproj",
    "remoteEnv": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_MULTILEVEL_LOOKUP": "0"
    },
    "hostRequirements": {
        "cpus": 2
    },
    "portsAttributes": {
        "8080": {
            "label": "HTTP",
            "onAutoForward": "notify"
        },
        "5001": {
            "label": "HTTPS",
            "onAutoForward": "notify"
        }
    },
    "workspaceFolder": "/workspaces/adyen-dotnet-online-payments/paybylink-example"
}

