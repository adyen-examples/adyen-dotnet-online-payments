@{
    ViewData["Title"] = "Adyen Checkout Cart";
}
<main class="preview-page">
  <section class="cart">
    <div class="order-summary">
      <ul class="order-summary-list">
        <li class="order-summary-list-list-item">
          <img src="~/images/pizza.svg" class="order-summary-list-list-item-image" alt="">
          <p class="order-summary-list-list-item-title">Your very special pizza</p>
          <p class="order-summary-list-list-item-price">19.99</p>
        </li>
      </ul>
    </div>
    <div class="cart-footer">
      <span class="cart-footer-label">Total:</span>
      <span class="cart-footer-amount">19.99</span>
      <a asp-area="" asp-controller="Home" asp-action="Checkout" asp-route-id="@ViewBag.PaymentMethod">
        <p class="button">Continue to checkout</p>
      </a>
    </div>
  </section>
</main>